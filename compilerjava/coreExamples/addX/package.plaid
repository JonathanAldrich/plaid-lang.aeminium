package coreExamples.addX;

state addX {

	var x = 0;

	method doAddX(y) {
		var z = x + y;
		z;
	}
}

method addFive() {
	var z = new addX with {var x = 5;};
	var z1 = z.doAddX(7);
	java.lang.System.out.println(z1);
}